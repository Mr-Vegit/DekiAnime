extends template.pug
block scripts
block style 
  style
    include ../static/css/Signin.css
    include ../static/css/media.css
    //- include ../static/media-query/home-media.css
block content
    div.container
        -if (messages.error){
            div.alert.alert-err 
                span #{messages.error} 
        -}    
        -if (message.failure){
            div.alert.alert-err 
                span #{message.failure}
        -}  
        -if (message.success){
            div.alert.alert-success 
                span #{message.success}
        -} 
        h1 Register
        form#my_Form(action="/security/register", method="post") 
            input#name(type="text", name="name", placeholder="Enter your name" required)
            input#email(type="email", name="email", placeholder="Enter your email" required)
            input#password(type="password", name="password", placeholder="Enter your password" required)
            button.btn(type="submit") Register
        a(href="/security/login") Come to login page 
    script(src="../static/js/Signin.js") 