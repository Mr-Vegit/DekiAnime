extends template.pug
block scripts
block style 
  style
    include ../static/css/Signin.css
    include ../static/css/media.css
    //- include ../static/media-query/home-media.css
block content
    div.container
        -if (message.error){
            div.alert.alert-err 
                span #{message.error} 
        -}    
        -if (message.success){
            div.alert.alert-success 
                span #{message.success}
        -} 
        h1 Login
        form#my_Form(action="/security/login", method="post") 
            input#emai(type="email", name="email", placeholder="Enter your email" required)
            input#passwor(type="password",placeholder="Enter your password", name="password" required)
            button.btn(type="submit") Login
        a(href="/security/register") Register Your account
    script(src="../static/js/Signin.js") 